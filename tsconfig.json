{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "locale": "en",
        "module": "commonjs",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "baseUrl": "src",
        "outDir": "dist",
        "pretty": true,
        "sourceMap": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.js"]
}

